@model ROS.MVC.ViewModel.EditTeam

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>EditTeam</h4>
    <hr />
    <p>
        @Html.ActionLink("Add User", "Create", "TeamCrewRegisteredUser", new {entryId = Model.team.EntryId, teamId = Model.team.Id, regUsers = Model.registeredUsers}, null)
    </p>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.team.Name)
        </dt>
        <dt>
            @Html.DisplayNameFor(model => model.raceEvent.Id)
        </dt>
        @foreach (var item in Model.users)
        {
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        }
    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
